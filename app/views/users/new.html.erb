<h1>Login</h1>
<div class="row">
  <div class="col-lg-12">
    <%= form_tag(users_path, method: "post", class: "form") do %>

    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag("username", params[:username], { class: "form-control" }) %>
    </div>

    <div class="form-group">
      <%= label_tag :dialect %>
      <%= select_tag('dialect', dialect_select_options(params[:dialect]), class: "form-control", include_blank: "Please select a dialect") %>
    </div>

    <%= submit_tag "Login", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
